<?xml version="1.0" encoding="UTF-8"?>
<!-- ruta: src/main/resources/com/mycompany/pasteleria/desktop/view/MainView.fxml -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.pasteleria.desktop.controller.ShellController"
            prefWidth="1200" prefHeight="720">

  <top>
    <HBox spacing="12" styleClass="topbar" prefHeight="64" minHeight="64" maxHeight="64">
      <children>
        <Rectangle width="32" height="32" arcWidth="16" arcHeight="16" styleClass="logo-accent"/>
        <Label fx:id="lblTitle" text="Pastelería – Backoffice" styleClass="title"/>
        <Label fx:id="lblBreadcrumb" text="Inicio / Dashboard" styleClass="breadcrumb"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblUser" text="Usuario: caja01 (CAJA)" styleClass="topmeta"/>
        <Label fx:id="lblClock" text="23/10 00:15" styleClass="topmeta"/>
        <Button fx:id="btnLogout" text="Cerrar sesión" onAction="#logout" styleClass="topbtn" mnemonicParsing="false"/>
      </children>
      <padding><Insets top="10" right="16" bottom="10" left="16"/></padding>
    </HBox>
  </top>

  <left>
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="sidebar-scroll">
      <content>
        <VBox spacing="6" styleClass="sidebar" prefWidth="256" minWidth="256" maxWidth="256">
          <padding><Insets top="16" right="12" bottom="16" left="12"/></padding>

          <fx:define>
            <ToggleGroup fx:id="navGroup"/>
          </fx:define>

          <children>
            <ToggleButton fx:id="navDashboard" text="Inicio (Dashboard)" toggleGroup="$navGroup"
                          onAction="#showClientes" selected="true" styleClass="navbtn"/>

            <!-- NUEVO: Pagos -->
            <ToggleButton fx:id="navPagos" text="Pagos" toggleGroup="$navGroup"
                          onAction="#showPagos" styleClass="navbtn"/>

            <ToggleButton fx:id="navPedidos" text="Pedidos" toggleGroup="$navGroup"
                          onAction="#showPedidos" styleClass="navbtn"/>
            <ToggleButton fx:id="navRegistrar" text="Registrar pedido" toggleGroup="$navGroup"
                          onAction="#showPedidos" styleClass="navbtn"/>
            <ToggleButton fx:id="navCocina" text="Cocina" toggleGroup="$navGroup"
                          onAction="#showCocina" styleClass="navbtn"/>
            <ToggleButton fx:id="navEnvios" text="Envíos" toggleGroup="$navGroup"
                          onAction="#showPedidos" styleClass="navbtn"/>
            <ToggleButton fx:id="navReportes" text="Reportes" toggleGroup="$navGroup"
                          onAction="#showProductos" styleClass="navbtn"/>

            <Separator/>

            <ToggleButton fx:id="navClientes" text="Clientes" toggleGroup="$navGroup"
                          onAction="#showClientes" styleClass="navbtn"/>
            <ToggleButton fx:id="navProductos" text="Productos" toggleGroup="$navGroup"
                          onAction="#showProductos" styleClass="navbtn"/>
            <ToggleButton fx:id="navConfig" text="Configuración" toggleGroup="$navGroup"
                          onAction="#showCategorias" styleClass="navbtn"/>
          </children>
        </VBox>
      </content>
    </ScrollPane>
  </left>

  <center>
    <StackPane fx:id="contentPane" styleClass="content">
      <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
    </StackPane>
  </center>

</BorderPane>
