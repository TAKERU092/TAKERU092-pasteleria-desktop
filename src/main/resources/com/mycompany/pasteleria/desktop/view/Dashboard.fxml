<?xml version="1.0" encoding="UTF-8"?>
<!-- ruta: src/main/resources/com/mycompany/pasteleria/desktop/view/Dashboard.fxml -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.pasteleria.desktop.controller.DashboardController"
      spacing="12" fillWidth="true">

  <padding>
    <Insets top="16" right="16" bottom="16" left="16"/>
  </padding>

  <!-- ===================== Título + acciones ===================== -->
  <HBox spacing="8" alignment="CENTER_LEFT">
    <children>
      <Label text="Inicio" styleClass="title"/>
      <Pane HBox.hgrow="ALWAYS"/>
      <!-- Acciones opcionales del dashboard -->
      <Button text="Refrescar" fx:id="btnRefrescar" styleClass="btn-ghost"/>
    </children>
  </HBox>

  <!-- ===================== KPIs ===================== -->
  <HBox spacing="12">
    <children>
      <!-- Card KPI -->
      <VBox spacing="6" styleClass="card" VBox.vgrow="NEVER">
        <children>
          <Label text="Pedidos de hoy" styleClass="label-muted"/>
          <Label fx:id="lblKpiPedidosHoy" text="0" style="-fx-font-size:20px; -fx-font-weight:700;"/>
          <Label fx:id="lblKpiPedidosSub" text="" styleClass="label-muted"/>
        </children>
      </VBox>

      <VBox spacing="6" styleClass="card">
        <children>
          <Label text="Ventas de hoy (S/.)" styleClass="label-muted"/>
          <Label fx:id="lblKpiVentasHoy" text="0.00" style="-fx-font-size:20px; -fx-font-weight:700;"/>
          <Label fx:id="lblKpiVentasSub" text="" styleClass="label-muted"/>
        </children>
      </VBox>

      <VBox spacing="6" styleClass="card">
        <children>
          <Label text="En cocina ahora" styleClass="label-muted"/>
          <Label fx:id="lblKpiCocina" text="0" style="-fx-font-size:20px; -fx-font-weight:700;"/>
        </children>
      </VBox>

      <VBox spacing="6" styleClass="card">
        <children>
          <Label text="Por entregar" styleClass="label-muted"/>
          <Label fx:id="lblKpiPorEntregar" text="0" style="-fx-font-size:20px; -fx-font-weight:700;"/>
        </children>
      </VBox>
      <Pane HBox.hgrow="ALWAYS"/>
    </children>
  </HBox>

  <!-- ===================== Zona inferior (Chart + Recientes) ===================== -->
  <HBox spacing="12" VBox.vgrow="ALWAYS">
    <children>

      <!-- Panel gráfico (2/3) -->
      <VBox spacing="8" styleClass="card" HBox.hgrow="ALWAYS">
        <children>
          <Label text="Ventas últimos 7 días" style="-fx-font-weight:600;"/>
          <!-- Contenedor donde el controlador dibuja/inyecta el gráfico -->
          <StackPane fx:id="pnlChart" prefHeight="260" minHeight="220" maxHeight="480">
            <children>
              <!-- Placeholder visual -->
              <HBox spacing="6" alignment="BOTTOM_LEFT" padding="12">
                <children>
                  <!-- 7 barras “dummy”; el controlador puede reemplazar por un Chart o nodos -->
                  <Rectangle width="24" height="80" styleClass="barchart-bar"/>
                  <Rectangle width="24" height="110" styleClass="barchart-bar"/>
                  <Rectangle width="24" height="70" styleClass="barchart-bar"/>
                  <Rectangle width="24" height="130" styleClass="barchart-bar"/>
                  <Rectangle width="24" height="150" styleClass="barchart-bar"/>
                  <Rectangle width="24" height="115" styleClass="barchart-bar"/>
                  <Rectangle width="24" height="170" styleClass="barchart-bar"/>
                </children>
              </HBox>
            </children>
          </StackPane>
        </children>
      </VBox>

      <!-- Panel “Pedidos recientes” (1/3) -->
      <VBox spacing="8" styleClass="card" prefWidth="340" minWidth="280" maxWidth="520">
        <children>
          <Label text="Pedidos recientes" style="-fx-font-weight:600;"/>
          <ListView fx:id="lvRecientes" prefHeight="260">
            <placeholder>
              <Label text="Sin pedidos recientes"/>
            </placeholder>
          </ListView>
        </children>
      </VBox>

    </children>
  </HBox>

</VBox>

