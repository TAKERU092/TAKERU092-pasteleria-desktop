<?xml version="1.0" encoding="UTF-8"?>
<!-- ruta: src/main/resources/com/mycompany/pasteleria/desktop/view/Dashboard.fxml -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.pasteleria.desktop.controller.DashboardController"
      spacing="12" fillWidth="true">

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <!-- TÍTULO -->
    <HBox spacing="8" alignment="CENTER_LEFT">
        <children>
            <Label text="Estado de pedidos" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnRefrescar" text="Refrescar" styleClass="btn-ghost"/>
        </children>
    </HBox>

    <!-- TARJETAS DE ESTADO -->
    <!-- Usamos FlowPane para que se acomoden según el ancho -->
    <FlowPane fx:id="cardsPane"
              hgap="12" vgap="12"
              prefWrapLength="1000">

        <!-- EN_REVISION -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="EN_REVISION" styleClass="label-muted"/>
                <Label fx:id="lblEnRevision" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="Revisar pago pendiente" styleClass="label-muted"/>
            </children>
        </VBox>

        <!-- APROBADO -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="APROBADO" styleClass="label-muted"/>
                <Label fx:id="lblAprobado" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="Listo para continuar" styleClass="label-muted"/>
            </children>
        </VBox>

        <!-- PAGO_NO_VALIDO -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="PAGO_NO_VALIDO" styleClass="label-muted"/>
                <Label fx:id="lblPagoNoValido" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="Pago observado / rechazado" styleClass="label-muted"/>
            </children>
        </VBox>

        <!-- EN_COCINA -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="EN_COCINA" styleClass="label-muted"/>
                <Label fx:id="lblEnCocina" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="En preparación de receta" styleClass="label-muted"/>
            </children>
        </VBox>

        <!-- EN_PREPARACION -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="EN_PREPARACION" styleClass="label-muted"/>
                <Label fx:id="lblEnPreparacion" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="Armado / empaquetado" styleClass="label-muted"/>
            </children>
        </VBox>

        <!-- SERVIDO -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="SERVIDO" styleClass="label-muted"/>
                <Label fx:id="lblServido" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="Entregado en salón/mostrador" styleClass="label-muted"/>
            </children>
        </VBox>

        <!-- ASIGNADO -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="ASIGNADO" styleClass="label-muted"/>
                <Label fx:id="lblAsignado" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="Con repartidor asignado" styleClass="label-muted"/>
            </children>
        </VBox>

        <!-- ENVIADO -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="ENVIADO" styleClass="label-muted"/>
                <Label fx:id="lblEnviado" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="En ruta al cliente" styleClass="label-muted"/>
            </children>
        </VBox>

        <!-- ENTREGADO -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="ENTREGADO" styleClass="label-muted"/>
                <Label fx:id="lblEntregado" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="Pedido completado" styleClass="label-muted"/>
            </children>
        </VBox>

        <!-- NO_ENCONTRADO -->
        <VBox spacing="6" styleClass="card" prefWidth="190" minWidth="170">
            <children>
                <Label text="NO_ENCONTRADO" styleClass="label-muted"/>
                <Label fx:id="lblNoEncontrado" text="0"
                       style="-fx-font-size:22px; -fx-font-weight:700;"/>
                <Label text="Dirección / cliente no ubic." styleClass="label-muted"/>
            </children>
        </VBox>

    </FlowPane>

    <!-- loader flotante opcional -->
    <StackPane fx:id="overlayPane" VBox.vgrow="ALWAYS" prefHeight="0">
        <children>
            <ProgressIndicator fx:id="loader" visible="false" maxWidth="60" maxHeight="60"
                               StackPane.alignment="CENTER"/>
        </children>
    </StackPane>

</VBox>
